<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="TrackIt.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:TrackIt"
    xmlns:health="clr-namespace:TrackIt.Views.Health"
	Shell.NavBarIsVisible="false"
    Shell.TabBarIsVisible="false">

	<ShellContent Title="Home" Route="MainPage" ContentTemplate="{DataTemplate local:MainPage}" />
	<ShellContent Title="Login" Route="LoginPage" ContentTemplate="{DataTemplate local:LoginPage}" />
	<ShellContent Title="Register" Route="RegisterPage" ContentTemplate="{DataTemplate local:RegisterPage}" />
	<ShellContent Title="ProfilePage" Route="ProfilePage" ContentTemplate="{DataTemplate local:ProfilePage}" />
	<ShellContent Title="ExercisesPage" Route="MyExercisesPage" ContentTemplate="{DataTemplate local:MyExercisesPage}" />
	<ShellContent Title="HealthLogsPage" Route="HealthLogsPage" ContentTemplate="{DataTemplate health:LogsPage}" />

</Shell>
